<mvc:View xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="wl.Worklist.controller.View2">
	<App>
		<pages>
			<Page title="Product Details">
				<content>
					<ObjectHeader title="ProductID: {ProductID}" intro="{Description}" number="{Price}" numberUnit="{CurrencyCode}" responsive="true">
						<headerContainer>
							<IconTabBar>
								<items>
									<IconTabFilter text="Info" key="key1">
										<l:VerticalLayout class="sapUiContentPadding" width="100%">
											<l:content>
												<sap.ui.layout.form:SimpleForm xmlns:sap.ui.layout.form="sap.ui.layout.form" title="Supplier Details" id="form0" layout="ResponsiveGridLayout" adjustLabelSpan="false" editable="true" singleContainerFullSize="false">
													<sap.ui.layout.form:content>
														<Label text="Product ID" id="label0"/>
														<Text width="100%" id="input0" text="{ProductID}"/>
														<Label text="Name" id="label1"/>
														<Text width="100%" id="input1" text="{Name}"/>
														<Label text="Category" id="label2"/>
														<Text width="100%" id="input2" text="{Category}"/>
														<Label text="Description" id="label3"/>
														<Text width="100%" id="input3" text="{Description}"/>
														<Label text="Supplier City" id="label4"/>
														<Text width="100%" id="input4" text="{ToSupplier/Address/City}"/>
														<Label text="Supplier Website" id="label5"/>
														<Text width="100%" id="input5" text="{ToSupplier/WebAddress}"/>
														<Label text="Created At" id="label6"/>
														<Text width="100%" id="input6" text="{CreatedAt}"/>
													</sap.ui.layout.form:content>
												</sap.ui.layout.form:SimpleForm>
											</l:content>
										</l:VerticalLayout>
									</IconTabFilter>
								</items>
							</IconTabBar>
						</headerContainer>
					</ObjectHeader>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>